PARTITIONS=ada0
DISTRIBUTIONS="kernel.txz base.txz"

cp -r /system-config-ansible /mnt/system-config-ansible

#!/bin/sh

echo "ifconfig_em0=DHCP" >> /etc/rc.conf
echo "ntpd_enable=YES"   >> /etc/rc.conf
echo "sshd_enable=YES"   >> /etc/rc.conf

export ALWAYS_ASSUME_YES="yes"

dhclient em0 && \
pkg update && \
pkg upgrade && \
pkg install ansible python3 &&
cd /tmp/system-config-ansible && \
ansible-playbook freebsd-desktop.yml
