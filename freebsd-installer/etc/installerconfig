PARTITIONS=ada0
DISTRIBUTIONS="kernel.txz base.txz"
export ALWAYS_ASSUME_YES="yes"

#!/bin/sh

echo "ifconfig_em0=DHCP" >> /etc/rc.conf
echo "ntpd_enable=YES"   >> /etc/rc.conf
echo "sshd_enable=YES"   >> /etc/rc.conf

dhclient em0 && \
pkg update && \
pkg upgrade && \
pkg install ansible python3 git &&
cd /tmp && \
git clone git://github.com/duckinator/dotfiles.git system-config && \
cd system-config/ansible && \
ansible-playbook freebsd-desktop.yml && \
cd / && \
rm -rf /tmp/system-config
