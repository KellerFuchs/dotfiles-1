PARTITIONS=ada0
DISTRIBUTIONS="kernel.txz base.txz"

if [ "$1" == "reboot-watcher" ]; then
  echo "Reboot watcher spawned successfully."
  while [ ! -f /mnt/tmp/reboot-me-please ]; do
    sleep 1
  done
  shutdown -r 5
else
  echo "Spawning reboot watcher."
  sh $0 reboot-watcher &
fi

#!/bin/sh

echo "ifconfig_em0=DHCP" >> /etc/rc.conf
echo "ntpd_enable=YES"   >> /etc/rc.conf
echo "sshd_enable=YES"   >> /etc/rc.conf

export ASSUME_ALWAYS_YES="yes"
ansible_python_interpreter=python2.7

dhclient em0
pkg update && \
pkg upgrade && \
pkg install ansible git && \
/usr/local/bin/git clone https://github.com/duckinator/dotfiles.git /tmp/system-config && \
cd /tmp/system-config/ansible/ && \
/usr/local/bin/ansible-playbook -i localhost freebsd-desktop.yml &> /tmp/log
